<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %> </title>
  <%= favicon_link_tag 'SLOGo.png'%>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="wrapper">
	<div id="main-nav">
		<ul id="home-nav">
			<li><%= image_tag("SLOGo.png") %></li>
			<% if current_user %>
				<li><h3><%= link_to 'SLOG', current_user %></h3> </li> |
				<li><%= link_to 'Home', current_user, 'data-no-turbolink' => true %></li> |		
				<li><%= link_to 'View Hikes', :controller => :hikes, :action => :index   %></li> |
				<li><%= link_to 'Events', :controller => :events, :action => :index    %></li>				
				<% elsif (params[:action] == 'show' )%>
				<li><h3><%= link_to 'SLOG', root_path %></h3> </li> 
				<li><%= link_to 'Back to View All Hikes', :controller => :hikes, :action => :index   %></li> 
				<% else %>
				<li><h3><%= link_to 'SLOG', root_path %></h3> </li> 
			<% end %>			
		</ul>
		<ul id="page-nav">
			<% if current_user %>
				Logged in as: <%= current_user.username %> |
       			<%= link_to "Log Out", session_path("current"), method: "delete" %> 
			<% else %>
			   <%= link_to 'Log In', new_session_path %>
			<% end %>
		</ul>
	</div>

	<div id="login-background">
	<!-- age specific starts here -->
	<%= yield %>
	</div>

</div> <!--wrapper-->

<div id="footer">
	
</div>

</body>
</html>
