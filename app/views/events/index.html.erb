<h1>All SLOG Events</h1>
<div class="center">
  <p id="notice"><%= notice %></p>


  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>        
        <th>Hike</th>
        <th>Meet Up Location</th>
        <!-- <th>Who is going</th> -->
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr> 
          <td><%=
		  	@hike = Hike.find_by_id(event.hike_id) 
		  	link_to event.name, event_path(event, :lat => @hike.lat, :lng => @hike.lng), 'data-no-turbolink' => true 
		  %></td>
          <td><%= event.date %></td>
          <td> </td>
          <td><%= event.location %></td>
          <!-- <td><%= event.user_participating %></td> -->
          <!-- below should be admin only-->
<!--           <td><%= link_to 'Show', event %></td>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Event', new_event_path %>
</div>
